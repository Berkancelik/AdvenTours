
@model TraversalCoreProje.Models.UserRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>Test Başlık</title>
    <!-- Meta tag Keywords -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <meta name="keywords"
          content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script>
        addEventListener("load", function() {
            setTimeout(hideURLbar, 0);
        }, false);
        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <!-- //Meta tag Keywords -->
    <!--/Style-CSS -->
    <link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
    <!--//Style-CSS -->
</head>

<body>
    <!-- /login-section -->
    <section class="w3l-login-6">
        <div class="login-hny">
            <div class="form-content">
                <div class="form-right">
                    <div class="overlay">
                        <div class="grid-info-form">
                            <h5>@localizer["Adven Tours Rezervasyon"]</h5>
                            <h3>@localizer["Hesap Oluşturun"]</h3>
                            <p>
                                @localizer["Biririnden deneyimli rehberlerimziz eşliğinde İskandinav ülkelerinin soğuğunu, Akdeniz ülkelerinin sıcaklığındanArdahan dağlarına tırmanman için kayıt olun."]
                              
                            </p>
                            <a href="index.html" class="read-more-1 btn">Hadi Başlayalım</a>
                        </div>

                    </div>
                </div>
                <div class="form-left">
                    <div class="middle">
                        <h4>@localizer["Bize Katılın"]</h4>
                        <p>@localizer["Hemen ücretsiz hesap oluşturun."]</p>
                    </div>
        <form asp-action="SignUp"  class="signin-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="form-input">
                            <label asp-for="Name" class="control-label">@localizer["Adınız"]</label>
                <input asp-for="Name" class="form-input"  />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
              <div class="form-input">
                            <label asp-for="Surname" class="control-label">@localizer["Soyadınız"]</label>
                <input asp-for="Surname" class="form-input" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-input">
                            <label asp-for="UserName" class="control-label">@localizer["Kullanıcı Adınız"]</label>
                <input asp-for="UserName" class="form-input" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-input">
                            <label asp-for="Mail" class="control-label">@localizer["Mail Adresiniz"]</label>
                <input asp-for="Mail" type="email"  class="form-input" />
                <span asp-validation-for="Mail"  class="text-danger"></span>
            </div>
         
            <div class="form-input">
                            <label asp-for="Password" class="control-label">@localizer["Parola"]</label>
                <input asp-for="Password" type="password" class="form-input" />
                <span asp-validation-for="Password" type="password"  class="text-danger"></span>
            </div>

              <div class="form-input">
                            <label asp-for="ConfirmPassword" class="control-label">@localizer["Parola Tekrar"]</label>
                <input asp-for="ConfirmPassword" type="password" class="form-input" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                 </div>

                        <label class="container">
                            @localizer["Şartları Okudum Kabul Ediyorum"]
                         
                            <input type="checkbox">
                            <span class="checkmark"></span>
                        </label>
                        <button class="btn">@localizer["Kayıt Ol"]</button>
                    </form>
                    <div class="copy-right text-center">
                        <p>
                            © @DateTime.Now.Year Tüm Hakları Saklıdır |</a>
                        </p>
                    </div>
                </div>

            </div>

        </div>
    </section>
 </body>

</html>