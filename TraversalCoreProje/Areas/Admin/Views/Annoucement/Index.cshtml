@model List<TraversalCoreProje.Areas.Admin.Models.AnnoucementListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>@localizer["Duyuru Listesi"]</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>@localizer["Başlık"]</th>
        <th>@localizer["İçerik"]</th>
        <th>@localizer["Detaylar"]</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>@item.Content</td>
            <td><a href="#" class="btn btn-outline-dark">@localizer["Detaylar"]</a></td>
        </tr>
        
    }
</table>

